<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Disabled -->
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/rs_bg_disabled_alt"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- Pressed -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/rs_bg_secondary_hover"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- Default -->
    <item>
        <shape>
            <solid android:color="@color/rs_bg_secondary"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>

</selector>

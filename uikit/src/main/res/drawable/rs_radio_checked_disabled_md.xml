<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- outer circle with border -->
    <item>
        <shape android:shape="oval">
            <size android:width="20dp" android:height="20dp"/>
            <solid android:color="@color/rs_radio_bg_disabled_checked"/>
            <stroke android:width="3dp" android:color="@color/rs_radio_border_default"/>
        </shape>
    </item>

    <!-- inner dot (disabled gray) -->
    <item android:top="6dp" android:left="6dp" android:right="6dp" android:bottom="6dp">
        <shape android:shape="oval">
            <size android:width="8dp" android:height="8dp"/>
            <solid android:color="@color/rs_radio_border_default"/>
        </shape>
    </item>

</layer-list>

<resources>

    <!-- ===================== -->
    <!-- Shared attributes (ONLY ONCE) -->
    <!-- ===================== -->
    <attr name="rsLabel" format="string" />
    <attr name="rsHint" format="string" />
    <attr name="rsState" format="enum">
        <enum name="normal" value="0" />
        <enum name="focused" value="1" />
        <enum name="error" value="2" />
        <enum name="success" value="3" />
    </attr>

    <!-- ===================== -->
    <!-- RSButton -->
    <!-- ===================== -->
    <declare-styleable name="RSButton">
        <attr name="rsType" format="enum">
            <enum name="primary" value="0" />
            <enum name="secondary" value="1" />
            <enum name="neutral" value="2" />
            <enum name="plain_dark" value="3" />
            <enum name="plain_light" value="4" />
        </attr>
    </declare-styleable>

    <!-- ===================== -->
    <!-- RSCheckBox -->
    <!-- ===================== -->
    <declare-styleable name="RSCheckBox">
        <attr name="rsSize" format="enum">
            <enum name="sm" value="0" />
            <enum name="md" value="1" />
        </attr>
        <attr name="rsStatus" format="enum">
            <enum name="unchecked" value="0" />
            <enum name="checked" value="1" />
            <enum name="indeterminate" value="2" />
        </attr>
        <attr name="android:text" />
    </declare-styleable>

    <!-- Custom State for Selectors -->
    <attr name="state_indeterminate" format="boolean" />

    <!-- ===================== -->
    <!-- RSEditText -->
    <!-- ===================== -->
    <declare-styleable name="RSEditText">
        <attr name="rsLabel" />
        <attr name="rsHint" />
        <attr name="rsState" />
    </declare-styleable>

    <!-- ===================== -->
    <!-- RSPasswordInput -->
    <!-- ===================== -->
    <declare-styleable name="RSPasswordInput">
        <attr name="rsLabel" />
        <attr name="rsHint" />
        <attr name="rsState" />
    </declare-styleable>

    <!-- ===================== -->
    <!-- RSLoadingCircle -->
    <!-- ===================== -->
    <declare-styleable name="RSLoadingCircle">
        <attr name="rsSpeed" format="float" />    <!-- degrees per second -->
        <attr name="rsTrailDeg" format="float" /> <!-- 0..360 -->
        <attr name="rsColor" format="color" />    <!-- HEAD color -->
    </declare-styleable>

</resources>

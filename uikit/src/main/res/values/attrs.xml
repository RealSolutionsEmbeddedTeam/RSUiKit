<resources>
    <declare-styleable name="RSButton">
        <attr name="rsType" format="enum">
            <enum name="primary" value="0" />
            <enum name="secondary" value="1" />
            <enum name="neutral" value="2" />
            <enum name="plain_dark" value="3" />
            <enum name="plain_light" value="4" />
        </attr>
    </declare-styleable>

    <!-- RSCheckBox -->
    <declare-styleable name="RSCheckBox">
        <attr name="rsSize" format="enum">
            <enum name="sm" value="0" />
            <enum name="md" value="1" />
        </attr>
        <attr name="rsStatus" format="enum">
            <enum name="unchecked" value="0" />
            <enum name="checked" value="1" />
            <enum name="indeterminate" value="2" />
        </attr>
    </declare-styleable>

    <!-- Custom State for Selectors -->
    <attr name="state_indeterminate" format="boolean" />
</resources>